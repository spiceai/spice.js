{
  "compilerOptions": {
    "strict": true,
    "module": "node16",
    "target": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "declaration": true, // generate .d.ts files
    "sourceMap": true,
    "jsx": "react",
    "outDir": "dist",
    "resolveJsonModule": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
